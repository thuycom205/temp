<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_sms_notification_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.sms.notification</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="SMS-Notification" id="SMS-Notification" string="SMS-Notification" data-key="SMS-Notification" >
                        <h2>Setting SMS-Notification</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">SMS-Notification</span>
                                        <div class="content-group">
                                          <div class="row mt16">
                                              <label for="account_sid" class="col-lg-5 o_light_label"/>
                                              <field name="account_sid" class="col-lg-6 p-0"/>
                                          </div>
                                          <div class="row mt2">
                                              <label for="authentication_token" class="col-lg-5 o_light_label"/>
                                              <field name="authentication_token"  class="col-lg-6 p-0"/>
                                          </div>
                                            <div class="row mt16">
                                              <label for="whatsapp_sender_id" class="col-lg-5 o_light_label"/>
                                              <field name="whatsapp_sender_id"  class="col-lg-6 p-0"/>
                                          </div>
                                          <div class="row mt2">
                                              <label for="sms_sender_id" class="col-lg-5 o_light_label"/>
                                              <field name="sms_sender_id"  class="col-lg-6 p-0"/>
                                          </div>
                                          <div class="row mt2">
                                              <label for="admin_mobile_number" class="col-lg-5 o_light_label"/>
                                              <field name="admin_mobile_number"  class="col-lg-6 p-0"/>
                                          </div>
                                          <div class="row mt2">
                                              <field name="notification_type" widget="radio"/>
                                          </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="sms_notification_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
             <field name="view_id" ref="res_config_settings_sms_notification_view_form"/>
            <field name="context">{'module' : 'whatsapp'}</field>
        </record>

        <menuitem id="sms_notification_config_settings_menu" name="Settings"
            parent="base.menu_config" sequence="0" action="sms_notification_config_settings_action"
            groups="base.group_system"
            web_icon="whatsapp,static/description/icon.png"
        />
    </data>
</odoo>
