<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="message_order_crm_first_purchase_form">
            <field name="name">message.order.crm.first.purchase.form</field>
            <field name="model">message.order.crm.first.purchase</field>
            <field name="arch" type="xml">
                <form string="message_form">
                    <sheet>
                        <group>
                            <field name="message_name" string="Name"/>
                        </group>

                        <group>
                            <field name="message_body" string="Message"/>
                        </group>

                        <group>
                            <field name="create_discount" string="Create discount code" />
                        </group>

                        <group>
                            <field name="discount_amount" string="Discount amount (in %)" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <record model="ir.actions.act_window"  id="message_order_crm_first_purchase_action">
          <field name="name">message.order.crm.first.purchase.action</field>
          <field name="res_model">message.order.crm.first.purchase</field>
          <field name="view_mode">form</field>
    </record>

    </data>
</odoo>